@section scripts {
    <script>
        function GetRecipeList(){
            var optionList = [...SelectedItems.selectedOptions]
            var valueList = optionList.map(x => x.value)
            $.ajax({
                method: "Get",
                url: '@Url.Action("PartialRecipeList","Home")',
                data: { ItemsIds: valueList.join(',') },
                success: function (res) {
                    $(".RecipeList").html(res);
                },
            })
        }
        $(document).ready(function () {
            $(".page-container").removeClass("container");
            if ('@(ViewBag.Command)') {
                location.href = '#@(ViewBag.Command)';
            }
        });

    </script>
}